@model IEnumerable<WebStore.Models.Produto>

<div>
    <h2>Todos os Produtos</h2>
</div>

<div class="container">
    <div class="row">
        @foreach (var prod in Model)
        {
            <div class="col-sm-4 col-md-4 col-lg-4">
                <p><img src="@prod.ImgUrl" width="300" height="300" /></p>
                <h3>@prod.Descricao</h3>
                <h4>Preço: @prod.ValorUnitario.ToString("c")</h4>
            </div>
        }
    </div>
</div>